<!DOCTYPE html>
<html lang="ru">

<body>

  <main class="main">



    {% for key, properties in data|reverse %}
      <section class="properties-of-year" id="year-{{ key }}">
        <h2>Добавлено в {{ key }}</h2>
          {% for property in properties %}
            <article class="property">
              {% if property.type == '@' %}
                <h3>{{ property.type }}{{ property.name }}</h3>
              {% else %}
                <h3>{{ property.type }}: {{ property.name }}</h3>
              {% endif %}
              <time>{{ property.date|date("d.m.Y") }}</time>
              <div>
                {% if property.specUrl %}<a href="{{ property.specUrl }}">Спецификация</a>{% endif %}
                {% if property.mdnUrl %}<a href="{{ property.mdnUrl }}">MDN</a>{% endif %}
                <a href="https://caniuse.com/?search={{ property.name }}">caniuse</a>
              </div>
            </article>
          {% endfor %}
      </section>
    {% endfor %}
  </main>
</body>
</html>
